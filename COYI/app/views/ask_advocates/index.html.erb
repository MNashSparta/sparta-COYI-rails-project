<p id="notice"><%= notice %></p>

<h1>Ask An Expert</h1>

<div class="row">
  <div class="col-md-3">

  </div>
  <div class="col-md-6 white-text text-on-bk-red pad">
    <table>
      <thead>
        <tr>
          <th>Topic:</th>
          <th>Details:</th>
          <th>To</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ask_advocates.each do |ask_advocate| %>
          <tr>
            <td><%= ask_advocate.title %></td>
            <td><%= ask_advocate.body %></td>
            <td><%= ask_advocate.email_to %></td>
            <td><%= link_to 'Show', ask_advocate %></td><br>
            <td><%= link_to 'Destroy', ask_advocate, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Ask An Expert', new_ask_advocate_path %>
  </div>
  <div class="col-md-3">

  </div>
</div>
