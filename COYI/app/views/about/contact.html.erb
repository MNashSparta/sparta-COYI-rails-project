<h1>Contact Us</h1>
  <div class="row">
    <div class="col-md-4 offset-md-4 text-on-bk-red" style="border-radius:10px;">
      <%= form_for :contact, url: "contact" do |form| %>
        <h3>Full Name:</h3>
        <%= form.text_field :name, :class => 'form-control' %>

        <h3>Your Email Address</h3>
        <div class="field">
          <%= form.text_field :email, :class => 'form-control' %>
        </div>

        <h3>Question:</h3>
        <div class="field">
          <%= form.text_area :body , cols:"50", rows:"10", :class => 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= form.submit "Send", :class => 'login-button' %>
        </div>
        <br>
      <% end  %>
    </div>
  </div>
