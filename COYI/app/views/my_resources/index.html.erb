          <li data-target="#carouselExampleIndicators" data-slide-to="15"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="16"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <img class="d-block img-fluid" src="/slides/slide1.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide2.png" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide3.png" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide4.png" alt="Fourth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide5.png" alt="Fifth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide6.png" alt="Sixth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="/slides/slide7.png" alt="Seventh slide">
