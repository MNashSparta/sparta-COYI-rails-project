
<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <img src="/images/user_placeholder_img.jpeg" class="user-profile-pic rounded-circle image-responsive" alt="Image of current user">
      <h1> <%= current_user.first_name%>'s Projects</h1>
    </div> <!--end of container-->

  </div> <!--end of jtron-->

<div class="container">
  <div class="row">
    <div class="col-md-3 form-div" id="smooth-edges">
      <%= link_to 'New Project', new_project_path, :class => "btn btn-outline-light btn-lg btn-block" %>
      <%= link_to 'Back to My Profile', user_profile_path, :class => "btn btn-outline-light btn-lg btn-block" %>
    </div>
    <div class="col-md-8 offset-1 page-band-red text-on-bk" id="smooth-edges">
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.title, project %></td>
              <td><%= link_to project.description, project %></td>
              <td><%= project.status %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!--end of col-->
  </div>
</div>
