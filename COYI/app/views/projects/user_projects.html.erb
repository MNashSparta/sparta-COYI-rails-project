<h1> <%= current_user.first_name%>'s Projects</h1>

<%= link_to 'New Project', new_project_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project %></td>
        <td><%= link_to project.description, project %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to My Profile', user_profile_path %>

<br>
